#!/bin/bash
if test -t 0; then
  touch /tmp/tb.txt
  exec 3>&1;
  TEXT=$(dialog --editbox /tmp/tb.txt 40 40 2>&1 1>&3);
  exitcode=$?;
  exec 3>&-;
  dialog --title 'Message' --msgbox "$(echo $TEXT | nc termbin.com 9999)" 5 50
else
  echo "$(cat -)" | nc termbin.com 9999 #Take Input and upload to termbin using NetCat
fi
